<UserControl x:Class="NaturalnieApp2_Controls.Views.Controls.ElementDeliminer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NaturalnieApp2_Controls.Views.Controls.Models"
             mc:Ignorable="d" 
             d:DesignHeight="5" d:DesignWidth="100">

    <UserControl.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Resources/ColorResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Rectangle  Margin="5 0 5 0">
            <Rectangle.Fill>
                <RadialGradientBrush RadiusX="0.4" RadiusY="1" Opacity="1" SpreadMethod="Pad">
                    <GradientStop Color="Gray"/>
                    <GradientStop Color="{StaticResource GeneralBackgorundColor}" Offset="1"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
