<UserControl x:Class="NaturalnieApp2.Controls.MenuBarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NaturalnieApp2.Controls"
             xmlns:vm="clr-namespace:NaturalnieApp2.ViewModels.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="100" Background="#FF885D5D">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" FontSize="24" Content="{Binding MainButtonTittle}" Command="{Binding MainButtonCommand}"/>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding SubButtonCollection}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button FontSize="20" Content="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


    </Grid>
</UserControl>
