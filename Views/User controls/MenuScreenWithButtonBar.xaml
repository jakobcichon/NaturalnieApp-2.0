<UserControl x:Class="NaturalnieApp2.Controls.MenuScreenWithButtonBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NaturalnieApp2.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40" MinHeight="30"/>
        </Grid.RowDefinitions>

        <UserControl Grid.Row="0" DataContext="{Binding UserControlToDisplay}"/>

        <ItemsControl Grid.Row="1">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Width="50" HorizontalAlignment="{Binding ButtonAligment}"  
                            Padding="5" Background="#FFB53E3E" Content="{Binding LefSideButtons}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
