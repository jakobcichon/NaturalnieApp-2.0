<UserControl x:Class="NaturalnieApp2.Views.Controls.ComboboxNaturalnieApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NaturalnieApp2.Views.Controls.Models"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="100">
    <Grid>
        <!-- Basic grid definition-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="*" MinWidth="20" MaxWidth="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!-- Search box field-->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0.1" Color="Black"/>
            </Border.Effect>
            <TextBox VerticalAlignment="Center" FontSize="20" 
                 BorderThickness="0" Grid.Row="0" Grid.Column="0" 
                 CaretBrush="White"
                 Background="White">

            </TextBox>
            
        </Border>
        <!-- Hint items button -->
        <Button x:Name="OpenCloseHintItemsButton" Height="20" 
                Grid.Row="0" Grid.Column="1" BorderThickness="0"
                Margin="5">
            
        </Button>
        
        <!-- Hint Items panel -->
        <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Panel.ZIndex="1000">
            <ContentControl>
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel>
                                
                            </StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ContentControl>
        </Border>
    </Grid>
</UserControl>
