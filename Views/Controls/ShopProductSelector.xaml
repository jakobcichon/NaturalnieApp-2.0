<UserControl x:Class="NaturalnieApp2.Views.Controls.ShopProductSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NaturalnieApp2.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800"
             Style="{StaticResource GeneralBackgroundColor}"
             >
    <Grid>

        <!-- Basic grid definition-->
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!-- Selected product details-->
        <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource HeaderStyle}" Margin="2">
            <Border.Effect>
                <DropShadowEffect Color="#FFB1A88E" Direction="270" ShadowDepth="1" />
            </Border.Effect>

        </Border>

        <Grid Grid.Row="1">
            <!-- Basic grid definition-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <!-- Product attributes-->
            <ItemsControl Grid.Column="0" Grid.RowSpan="3" ItemsSource="{Binding RelativeSource={RelativeSource  AncestorType=UserControl}, Path=Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Black" Background="Aqua">
                            <StackPanel Orientation="Vertical">
                                <Label Content="{Binding Name}"/>
                                <ComboBox ItemsSource="{Binding Values}" MaxWidth="200" IsManipulationEnabled="True" >
                                    <ComboBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </ComboBox.ItemsPanel>
                                </ComboBox>
                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Update button-->
            <Button Grid.Column="1" Grid.Row="1" Click="Button_Click"/>
        </Grid>

        
        <!-- Collapse button-->
        <Button Grid.Row="2" Style="{StaticResource GeneralButtonStyle}"/>
    </Grid>
</UserControl>
