<UserControl x:Class="NaturalnieApp2.Views.Controls.PropertyDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NaturalnieApp2.ViewModels.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200" Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" d:Text="Default text" HorizontalAlignment="Center"
                 VerticalAlignment="Center" Background="AliceBlue" 
                 BorderBrush="AliceBlue" IsReadOnly="True"/>
        <TextBox Grid.Row="1" d:Text="Default Text"/>

        <Canvas Grid.Row="2" Background="Red" Height="2" Margin=" 0 0 0 0" Visibility="Visible">
            <Canvas.Effect>
                <DropShadowEffect Direction="90" BlurRadius="5" ShadowDepth="1" Opacity="1" RenderingBias="Quality" Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}" />
            </Canvas.Effect>
        </Canvas>

    </Grid>
</UserControl>
