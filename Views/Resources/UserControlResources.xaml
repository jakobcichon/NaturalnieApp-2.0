<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

   
    <Style x:Key="GeneralBackgroundColor" TargetType="UserControl">
        <Setter Property="Background" Value="#FFEADFCB"/>
    </Style>

    <Style x:Key="BottomButtonBarStyle" TargetType="UserControl">
        <Setter Property="Background" Value="#FFE6D2AE"/>
    </Style>

    <Style x:Key="HeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="#fede84"/>
    </Style>
</ResourceDictionary>