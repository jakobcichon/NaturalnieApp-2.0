<UserControl x:Class="NaturalnieApp2.Sandbox.SandboxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:NaturalnieApp2.Views.Controls"
             xmlns:local="clr-namespace:NaturalnieApp2.Sandbox"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{StaticResource GeneralBackgroundColor}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0" 
                  MaxHeight="50" 
                  IsReadOnly="False"
                  IsTextSearchEnabled="True"
                  ItemsSource="{Binding ComboBoxDataSource}"
                  MaxWidth="200"/>

        <c:ComboboxNaturalnieApp Grid.Row="1" Height="50" Width="100"/>
    </Grid>
</UserControl>
